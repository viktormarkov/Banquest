<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/l</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="XXL_Black_Light">
        <item name="android:textSize">@dimen/xxl</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="M_Black_Light">
        <item name="android:textSize">@dimen/m</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="S_Black_Light">
        <item name="android:textSize">@dimen/s</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="XS_Black_Light">
        <item name="android:textSize">@dimen/xs</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="XS_Gray">
        <item name="android:textSize">@dimen/xs</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="S_Gray_Light">
        <item name="android:textSize">@dimen/s</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="XS_Gray_Light">
        <item name="android:textSize">@dimen/xs</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="XL_Accent">
        <item name="android:textSize">@dimen/xl</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="L_Accent">
        <item name="android:textSize">@dimen/l</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="M_Accent">
        <item name="android:textSize">@dimen/m</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="S_Accent">
        <item name="android:textSize">@dimen/s</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="M_Orange">
        <item name="android:textSize">@dimen/m</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button" >
        <item name="android:background">@drawable/oval_green_background</item>
        <item name="android:textSize">@dimen/m</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
</resources>
